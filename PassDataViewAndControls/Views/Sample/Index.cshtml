@{
	ViewData["Title"] = "Sample Controller Index";
}

<h1>Sample ---> Index</h1>
<div class="justify-content-lg-center">
	<h1 class="btn btn-danger">@ViewBag.GetDate</h1>
</div>
<div class="justify-content-center">
	<ul class="list-group">
		@foreach (var name in ViewBag.Names)
		{
			<li class="list-item">
				<a href="#" class="nav-item">@name</a>
			</li>
		}
	</ul>
</div>

<div class="justify-content-center">
	<span class="btn btn-outline-danger">@ViewData["Hour"]</span>
</div>

<div class="justify-content-center">
	<span class="btn btn-outline-danger">@TempData["Day"]</span>
</div>

<!--Index2'ye giden link-->
<div class="justify-content-center">
	<a asp-controller="Sample" asp-action="Index2" class="btn btn-warning">Index 2</a>
</div>
